<UserControl
    x:Class="UnoButtonOnLayeredCanvasIssue.Controls.ButtonOverlay"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:UnoButtonOnLayeredCanvasIssue.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <Canvas>
        <Button Click="Button_Click"
                Canvas.Left="{x:Bind VM.X, Mode=OneWay}"
                Canvas.Top="{x:Bind VM.Y, Mode=OneWay}"
                Content="Press Me" Background="Red" BorderBrush="Black" BorderThickness="1" Padding="4"/>
    </Canvas>
</UserControl>
